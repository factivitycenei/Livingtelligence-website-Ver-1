import React, { useState } from 'react';
import { TAXONOMY_DATA } from '../constants';

const TaxonomySection: React.FC = () => {
  const [openIndex, setOpenIndex] = useState<number>(0);

  return (
    <section className="py-24 px-8 md:px-24 bg-background-light transition-colors duration-700" id="taxonomia">
      <div className="max-w-6xl mx-auto">
        <header className="mb-16 border-b border-primary/10 pb-8 flex justify-between items-end">
          <div className="max-w-xl">
            <span className="text-[10px] uppercase tracking-[0.5em] font-black text-accent mb-3 block">Espejos de Visibilidad</span>
            <h3 className="serif-text text-4xl md:text-5xl font-light">
              Seis fenómenos <span className="italic text-primary">que invitan a la claridad.</span>
            </h3>
          </div>
          <p className="font-display text-[9px] uppercase tracking-[0.2em] font-bold opacity-30 text-right hidden md:block">
            Persistence Index <br /> v.2024
          </p>
        </header>
        
        <div className="space-y-1">
          {TAXONOMY_DATA.map((item, index) => {
            const isOpen = openIndex === index;
            return (
              <article 
                key={item.id} 
                className={`transition-all duration-700 overflow-hidden border-b border-primary/5 ${isOpen ? 'bg-white shadow-2xl shadow-primary/5 my-4 first:mt-0 last:mb-0' : 'hover:bg-primary/[0.02]'}`}
              >
                <button
                  onClick={() => setOpenIndex(index)}
                  className="w-full px-8 py-8 flex justify-between items-center text-left focus:outline-none group"
                >
                  <div className="flex items-center gap-8">
                    <span className={`serif-text text-lg italic transition-opacity duration-500 ${isOpen ? 'opacity-100 text-accent' : 'opacity-20'}`}>
                      {item.id}
                    </span>
                    <h4 className={`font-display text-sm md:text-base font-extrabold tracking-[0.2em] uppercase transition-all duration-500 ${isOpen ? 'text-primary' : 'text-primary/60 group-hover:text-primary'}`}>
                      {item.title}
                    </h4>
                  </div>
                  {!isOpen && (
                    <span className="material-symbols-outlined text-primary/20 group-hover:text-primary/40 transition-all group-hover:translate-x-1">
                      arrow_forward
                    </span>
                  )}
                </button>
                
                <div 
                  className={`grid transition-all duration-700 ease-[cubic-bezier(0.23,1,0.32,1)] ${isOpen ? 'grid-rows-[1fr] opacity-100' : 'grid-rows-[0fr] opacity-0'}`}
                >
                  <div className="overflow-hidden">
                    <div className="px-8 pb-12 pt-4">
                      <div className="max-w-4xl">
                        {/* La Pregunta Poderosa: El Espejo */}
                        <div className="relative mb-12">
                          <div className="absolute -left-12 top-0 w-px h-full bg-accent/30 hidden md:block"></div>
                          <p className="serif-text text-3xl md:text-5xl lg:text-6xl leading-[1.15] text-primary/90 font-light italic tracking-tight">
                            {item.description}
                          </p>
                        </div>
                        
                        {/* Upside y Atributos */}
                        <div className="flex flex-col md:flex-row md:items-center gap-8 pt-8 border-t border-primary/5">
                          <div className="flex flex-wrap gap-4">
                            {item.features.map((feature) => (
                              <div key={feature} className="flex items-center gap-2">
                                <span className="w-1 h-1 bg-accent rounded-full"></span>
                                <span className="text-[9px] uppercase tracking-[0.25em] font-black opacity-40">
                                  {feature}
                                </span>
                              </div>
                            ))}
                          </div>
                          <div className="md:ml-auto">
                             <div className="flex items-center gap-3">
                                <span className="text-[10px] uppercase tracking-[0.4em] font-black text-primary/20 italic">
                                  Restaurar visibilidad
                                </span>
                                <span className="material-symbols-outlined text-accent text-sm animate-pulse">visibility</span>
                             </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </article>
            );
          })}
        </div>

        <div className="mt-16 flex justify-center opacity-40">
           <div className="flex items-center gap-6">
              <div className="w-12 h-px bg-primary/20"></div>
              <p className="font-display text-[8px] uppercase tracking-[0.5em] font-bold italic text-center">
                Haz clic en cada fenómeno para abrir el espejo de claridad
              </p>
              <div className="w-12 h-px bg-primary/20"></div>
           </div>
        </div>
      </div>
    </section>
  );
};

export default TaxonomySection;


